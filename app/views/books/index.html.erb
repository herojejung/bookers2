<main>
<%= render 'book', books: @books %>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinipn</th>
          <th></th>
        </tr>
      </thead>
    <tbody>
  <% @books.each do |books| %>
    <tr>
      <td>
        <%= link_to book_path(books) do %>
        <%= image_tag @user.get_image %>
        </td>
        <td>
          <%=link_to user_path(books) do %>
          <%= books.title %>
        </td>
      <td><%= books.body %></td>
