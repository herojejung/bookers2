<h1>User info</h1>
<%= image_tag @user.get_image %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <%= @user.name %>
      <th></th>
    </tr>
    <tr>
      <th>introduction</th>
      <%= @user.introduction %>
      <th></th>
    </tr>
  </tbody>
</table>

<li>
  <%= link_to "user_info", edit_user_registration_path %>
</li>

<h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model: @books.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
