<%= render 'book', books: @books %>
<div class="col-md-8 offset-md-1">
  <h2>Book details</h2>
    <table class="table">
     <tbody>
       <tr>
        <td>
         <%= link_to user_path(@book) do %>
          <%= image_tag @user.get_image %>
          <p><%= @book.user.name %></p>
          </td>
         <td>
         <%=link_to book_path(@book) do %>
         <%= @book.title %>
        </td>
       <td><%= @book.body %></td>
       <td>
        <%= link_to "Edit", edit_book_path,class: "btn btn-sm btn-success" %>
       </td>

       <td>
        <% if @book.user == current_user %>
        <%= link_to "Destroy", book_path(@book),method: :delete,"data-confirm" => "本当に削除しますか？",class: "btn btn-sm btn-danger" %>
       </td>

      </tr>
      <% end %>
      <% end %>
     <% end %>
    </tbody>
  </table>
</div>