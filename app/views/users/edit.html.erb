<div class ="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User Info</h1>
        <%= form_with model: @user do |f| %>
          <label for="inputName">Name</label>
            <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%></p>
              <label for="inputImage">Image</label>
              <p><%= f.file_field :image, placeholder: "Image",accept: "image/*" %></p>
            <label for="inputOpinion">Introduction</label>
          <p><%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Inputintroduction"%></p>
         <p>
        <%= f.submit 'Update Book', class: "btn btn-secondary" %>
      </p>
    <% end %>
  </div>
</div>
</div>